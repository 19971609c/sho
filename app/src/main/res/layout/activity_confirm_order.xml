<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConfirmOrderActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/con_addressa"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/con_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/con_num"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:text="12132123"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/con_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="121231321231"
            android:textColor="#f66"
            android:textSize="16sp" />

        <Button
            android:id="@+id/con_tj"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/shape_button"
            android:text="提交订单" />

    </LinearLayout>

</LinearLayout>